extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 #{currentProject.project_name}

        p.lead.text-light
          | #{currentProject.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each technology in technologies 
            li #{technology}

        a.button.expanded(href= `${currentProject.live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${currentProject.github_link}` target="_blank") GitHub Repo
    
    each url in imageURLs
      img.image(src=`${url}`)